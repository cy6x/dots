{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
    "centerOnLaunch": true,
    "disabledProfileSources": ["Windows.Terminal.Azure"],
    "tabSwitcherMode": false,
    "largePasteWarning": false,
    "multiLinePasteWarning": false,
    "disableAnimations": true,
    "confirmCloseAllTabs": false,

    "profiles": {
        "defaults": {
            "colorScheme": "Gruvbox Ish",
            "fontFace": "Terminus",
            "cursorShape": "filledBox",
            "scrollbarState": "hidden",
            "closeOnExit": "always",
            "bellStyle": "none"
        },

        "list": [
            {
                "name": "PowerShell",
                "commandline": "powershell.exe -nologo",
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}"
            },
            {
                "hidden": true,
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}"
            }
        ]
    },

    "schemes": [
        {
            "name": "Gruvbox Ish",

            "background": "#282828",
            "foreground": "#dfbf8e",

            "black": "#32302f",
            "red": "#d75f5f",
            "green": "#a8a81c",
            "yellow": "#d69617",
            "blue": "#458588",
            "purple": "#b16286",
            "cyan": "#689d6a",
            "white": "#a89984",

            "brightBlack": "#928374",
            "brightRed": "#d75f5f",
            "brightGreen": "#8b9553",
            "brightYellow": "#cea64a",
            "brightBlue": "#83a598",
            "brightPurple": "#d3869b",
            "brightCyan": "#87af87",
            "brightWhite": "#dfbf8e"
        }
    ],

    "actions": [
        { "command": "copy", "keys": "ctrl+c" },
        { "command": "paste", "keys": "ctrl+v" },
        { "command": "find", "keys": "ctrl+f" },

        { "command": "scrollUpPage", "keys": "ctrl+shift+k" },
        { "command": "scrollDownPage", "keys": "ctrl+shift+j" },

        { "command": "duplicateTab", "keys": "ctrl+t" },
        { "command": "closeTab", "keys": "ctrl+w" },

        { "command": "nextTab", "keys": "ctrl+alt+l" },
        { "command": "prevTab", "keys": "ctrl+alt+h" },

        { "command": { "action": "splitPane", "split": "auto", "splitMode": "duplicate" }, "keys": "alt+enter" },
        { "command": "closePane", "keys": "alt+o" },

        { "command": { "action": "moveFocus", "direction": "left" }, "keys": "alt+h" },
        { "command": { "action": "moveFocus", "direction": "down" }, "keys": "alt+j" },
        { "command": { "action": "moveFocus", "direction": "up" }, "keys": "alt+k" },
        { "command": { "action": "moveFocus", "direction": "right" }, "keys": "alt+l" },
        { "command": { "action": "moveFocus", "direction": "previous" }, "keys": "alt+u" },

        { "command": { "action": "resizePane", "direction": "left" }, "keys": "alt+shift+h" },
        { "command": { "action": "resizePane", "direction": "down" }, "keys": "alt+shift+j" },
        { "command": { "action": "resizePane", "direction": "up" }, "keys": "alt+shift+k" },
        { "command": { "action": "resizePane", "direction": "right" }, "keys": "alt+shift+l" }
    ]
}
